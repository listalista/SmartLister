<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
  <LinearLayout
  	android:orientation="vertical"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent">

        <TextView
            android:id="@+id/pageHeader"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="New Product Creation - 2"
            android:textAppearance="?android:attr/textAppearanceMedium" />
   
   <TableLayout 
    	android:layout_width="match_parent" 
    	android:layout_height="match_parent" 
   	    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">

    	<TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
       	    android:gravity="center_horizontal" >

        </TableRow>
            
        <TableRow
          android:id="@+id/tableRow1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" >

        	<TextView
        	    android:id="@+id/textView1"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="Expected Price ($)"
        	    android:textSize="15sp"
        	    android:width="120dp" />

        	<EditText
        	    android:id="@+id/expPrice"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:ems="5"
        	    android:inputType="number" />

    	</TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/qualityspinner"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:entries="@array/Product_Quality" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>
            
        </TableLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Preferred Travel Distance:"
                    android:textSize="15sp" />
		
                
        <TableLayout 
    		android:layout_width="match_parent" 
    		android:layout_height="match_parent" 
   	    	android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
                
          <TableRow
          	android:id="@+id/tableRow3"
          	android:layout_width="wrap_content"
          	android:layout_height="wrap_content" >
                  
            	<EditText
            	    android:id="@+id/prefmiles"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:ems="5"
            	    android:inputType="number" />
            	
            	<TextView
        	    	android:id="@+id/textView4"
        	    	android:layout_width="wrap_content"
        	    	android:layout_height="wrap_content"
        	    	android:text="miles"
        	    	android:textSize="15sp"
        	    	android:width="150dp" />
           
          </TableRow>
          
          <TableRow
          	android:id="@+id/tableRow4"
          	android:layout_width="wrap_content"
          	android:layout_height="wrap_content" >
            	
              	<TextView
        	    	android:id="@+id/textView5"
        	    	android:layout_width="wrap_content"
        	    	android:layout_height="wrap_content"
        	    	android:text="Tags:"
        	    	android:textSize="15sp"
        	    	android:width="90dp" />
                  
            	<EditText
            	    android:id="@+id/tagnames"
            	    android:layout_width="wrap_content"
            	    android:layout_height="50dp"
            	    android:ems="5"
            	    android:hint="Use comma to seperate"
            	    android:inputType="text" />
           
          </TableRow>
          
          <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

          </TableRow>
          
          <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/locationspinner"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:entries="@array/Product_Location" />

            </TableRow>
            
          	<TableRow
          		android:id="@+id/tableRow6"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content" >
            	
                  
            	<EditText
            	    android:id="@+id/preflocation"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:ems="5"
            	    android:inputType="text"
            	    android:layout_weight="1" />
           
          </TableRow>
          
          <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

          </TableRow>
          
       </TableLayout>

        <Button
            android:id="@+id/newprodconfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="Create" />
        
 </LinearLayout>

</ScrollView>