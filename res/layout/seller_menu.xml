<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="24dp"
        android:text="Please Select a choice:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/updateprodbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Edit my existing Product" />

    <Button
        android:id="@+id/deleteprodbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateprodbutton"
        android:layout_below="@+id/updateprodbutton"
        android:layout_marginTop="32dp"
        android:text="Delete an existing Product" />

    <Button
        android:id="@+id/listnewprodbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateprodbutton"
        android:layout_alignLeft="@+id/updateprodbutton"
        android:layout_marginBottom="30dp"
        android:text="List a new Product" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listnewprodbutton"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="26dp"
        android:text="Seller Menu"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
